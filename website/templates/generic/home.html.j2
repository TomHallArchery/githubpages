{% extends "base/base.html.j2" %}

{% block head %}
<!-- override default grid layout for landing on homepage  -->
  <style media="screen and (min-width: 110ch)">
    body {
      display: block;
      min-height: 100vh;
    }
    main {
      margin-left: 10vw;
      margin-right: 10vw;
    }
  </style>
{% endblock %}

{% block body %}
{% filter responsive_images(img_layout, img_url) %}
<main id="page_body">
  <h1>Welcome</h1>
  <p>My website is still under construction but feel free to have a look around!</p>

  <!-- homepage content sections: -->
  <!-- Banner image [main > header] -->
  <img
  src="{{ img_url + '2020-Back2Back-Finals.jpg'}}"
  alt="Front view of tom shooting in the back2back finals against a dark backdrop"
  width="1600"
  height="1200"
  >


  <img src="../static/img/src/2020-Warwick-Castle-Bow.jpg"
  alt="Close photo of red bow in sunlight"
  width="1600"
  height="1200"
  >

</main>

{% endfilter %}
{% endblock body %}
