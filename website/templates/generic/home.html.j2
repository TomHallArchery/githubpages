{% block head %}
<!-- override default grid layout for landing on homepage  -->
  <style media="screen and (min-width: 110ch)">
    body {
      display: block;
      margin: auto;
      min-height: 100vh;
      width: 80%;
    }
  </style>
{% endblock %}

{% block body %}
<main id="page_body">
  <h1>Welcome</h1>
  <p>My website is still under construction but feel free to have a look around!</p>

  <!-- homepage content sections: -->
  <!-- Banner image [main > header] -->
  <img
  src="{{ m.imgpath(img_url, '2020-Back2Back-Finals_1500.jpg') }}"
  srcset="
    {{ m.imgpath(img_url, '2020-Back2Back-Finals_1500.jpg') }} 1500w,
    {{ m.imgpath(img_url, '2020-Back2Back-Finals_1000.jpg') }} 1000w,
    {{ m.imgpath(img_url, '2020-Back2Back-Finals_750.jpg') }} 750w,
    {{ m.imgpath(img_url, '2020-Back2Back-Finals_500.jpg') }} 500w,
    {{ m.imgpath(img_url, '2020-Back2Back-Finals_300.jpg') }} 300w
