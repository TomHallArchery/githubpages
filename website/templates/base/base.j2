{% import "macros/macros.j2" as macros -%}
<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>{{ title }} | Tom Hall Archery </title>
  {{ macros.meta("description",  description ) }}
  {{ macros.meta("keywords",  keywords ) }}
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="theme-color" content="#ffa700" />


  <!-- favicon -->
  <link rel="icon" type="image/png" href="{{ url_for('static', filename='favicon/favicon.ico') }}">
  <!-- generated from https://favicon.io/favicon-generator/ using erica one font -->
  <link rel="apple-touch-icon" sizes="180x180" href="{{ url_for('static', filename='favicon/apple-touch-icon.png') }}">
  <link rel="icon" type="image/png" sizes="32x32" href="{{ url_for('static', filename='favicon/favicon-32x32.png') }}">
  <link rel="icon" type="image/png" sizes="16x16" href="{{ url_for('static', filename='favicon/favicon-16x16.png') }}">
  <link rel="manifest" href="{{ url_for('static', filename='favicon/site.webmanifest') }}">


  <!-- fonts -->
  <link rel="preload" href="{{ url_for('static', filename='fonts/Roboto_Slab/RobotoSlab-VariableFont_wght-Latin.woff2') }}" as="font" type="font/woff2" crossorigin>
  {{ macros.link_style('css/fonts.css')}}
  <!-- styles -->
  {# {{ macros.link_style('css/normalize.css')}} #}
  {{ macros.link_style('css/colors.css')}}
  {{ macros.link_style('css/styles.css')}}
{% if highlight_blocks %}
    {{ macros.link_style('css/blocks.css')}}
{% endif %}


  <!-- js -->
  <!-- Alpine JS (Modern JQuery replacement for minor animations/ui/reactive parts) -->
  <script src="{{ url_for('static', filename='js/alpine.js') }}" defer></script>

</head>

<body>

<header id="site_id">
{% include "base/header.j2" %}
</header>

<nav id="site_nav">
{% include "base/nav.j2" %}
</nav>

<main id="page_body">

{% block page_heading -%}
    <h1>{{ title }}</h1>
{%- endblock %}



{% block page_content -%}
    <em><strong>DEFAULT CONTENT</strong></em>
{%- endblock %}

</main>

<footer id="site_footer">
{% include "base/footer.j2" %}
</footer>

</body>

</html>
